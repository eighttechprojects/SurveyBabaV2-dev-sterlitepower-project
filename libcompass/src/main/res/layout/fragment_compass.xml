<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.duy.compass.view.RobotoTextView
        android:id="@+id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableStart="@drawable/ic_gps_fixed_white_24dp"
        android:drawableLeft="@drawable/ic_gps_fixed_white_24dp"
        android:drawablePadding="8dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:padding="8dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Waiting for GPS signal..."
        android:textColor="@color/compass_text_primary_color" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context="com.duy.compass.MainCompassActivity">

        <com.duy.compass.sensor.view.CompassView2
            android:id="@+id/compass_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/container_weather"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_weather"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:tint="@color/compass_text_primary_color" />

                <com.duy.compass.view.RobotoTextView
                    android:id="@+id/txt_temp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/compass_text_primary_color"
                    android:textSize="30sp"
                    tools:text="48F" />
            </LinearLayout>

            <com.duy.compass.view.RobotoTextView
                android:id="@+id/txt_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/compass_text_primary_color"
                tools:text="48F" />

            <com.duy.compass.view.RobotoTextView
                android:id="@+id/txt_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/compass_text_primary_color"
                tools:text="48F" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ic_location_on_white_24dp"
                android:tint="@color/compass_text_primary_color" />

            <com.duy.compass.view.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="LOCATION"
                android:textColor="@color/compass_text_primary_color"
                android:textStyle="bold" />

            <com.duy.compass.view.RobotoTextView
                android:id="@+id/txt_lon_lat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/compass_text_primary_color"
                android:textStyle="bold"
                android:typeface="monospace" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/ic_altitude_white"
                android:tint="@color/compass_text_primary_color" />

            <com.duy.compass.view.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ALTITUDE"
                android:textColor="@color/compass_text_primary_color"
                android:textStyle="bold" />

            <com.duy.compass.view.RobotoTextView
                android:id="@+id/txt_altitude"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/compass_text_primary_color"
                android:textStyle="bold"
                android:typeface="monospace" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        >

        <com.duy.compass.view.RobotoTextView
            android:id="@+id/txt_sunrise"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:drawableStart="@drawable/ic_sunrise"
            android:drawableLeft="@drawable/ic_sunrise"
            android:ellipsize="end"
            android:foreground="?selectableItemBackground"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="8dp"
            android:text="..."
            android:textColor="@color/compass_text_primary_color" />

        <com.duy.compass.sensor.view.AccelerometerView
            android:id="@+id/accelerometer_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.duy.compass.view.RobotoTextView
            android:id="@+id/txt_sunset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_sunset"
            android:drawableRight="@drawable/ic_sunset"
            android:ellipsize="end"
            android:foreground="?selectableItemBackground"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="8dp"
            android:text="..."
            android:textColor="@color/compass_text_primary_color" />

    </LinearLayout>

</LinearLayout>
