<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGery"
        android:padding="@dimen/margin_5">

        <ImageView
            android:layout_width="@dimen/nav_logo_width_slider"
            android:layout_height="@dimen/nav_logo_height_slider"
            android:layout_marginLeft="@dimen/margin_10"
            android:background="@drawable/app_icon" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="@dimen/margin_20"
            android:gravity="bottom|left"
            android:padding="@dimen/margin_5"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llTimeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="horizontal"
        android:padding="@dimen/slider_pennding">

        <ImageView
            android:layout_width="@dimen/nav_panel_width_logo"
            android:layout_height="@dimen/nav_panel_height_logo"
            android:background="@drawable/timeline"
            android:backgroundTint="@color/purple_700" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/timeline"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/colorDarkGery" />

    <LinearLayout
        android:id="@+id/llBTmanager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="horizontal"
        android:padding="@dimen/slider_pennding">

        <ImageView
            android:layout_width="@dimen/nav_panel_width_logo"
            android:layout_height="@dimen/nav_panel_height_logo"
            android:background="@drawable/bluetooth"
            android:backgroundTint="@color/purple_700" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/blueTooth_manager"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/colorDarkGery" />

    <LinearLayout
        android:id="@+id/llMySubscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2"
        android:orientation="horizontal"
        android:padding="@dimen/slider_pennding">

        <ImageView
            android:layout_width="@dimen/nav_panel_width_logo"
            android:layout_height="@dimen/nav_panel_height_logo"
            android:background="@drawable/subscribe"
            android:backgroundTint="@color/purple_700" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/my_subscription"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/colorDarkGery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2"
        android:orientation="horizontal"
        android:padding="@dimen/slider_pennding">

        <ImageView
            android:layout_width="@dimen/nav_panel_width_logo"
            android:layout_height="@dimen/nav_panel_height_logo"
            android:background="@drawable/cart"
            android:backgroundTint="@color/purple_700" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/surveybaba_store"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/colorDarkGery" />

    <LinearLayout
        android:id="@+id/llBackupManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/slider_pennding">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/backup"
            android:backgroundTint="@color/purple_700" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/backup_manager"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/nav_panel_width_down"
            android:layout_height="@dimen/nav_panel_height_down"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/margin_7"
            android:background="@drawable/ic_down"
            android:backgroundTint="@color/black"
            android:gravity="right|center"
            app:tint="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBackupManagerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_5"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/llSettingsBM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5">

            <ImageView
                android:layout_width="@dimen/nav_panel_width"
                android:layout_height="@dimen/nav_panel_height"
                android:background="@drawable/backup" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/settings"
                android:textColor="@color/black"
                android:textSize="@dimen/nav_panel_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llManualBackupBM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/nav_panel_width"
                android:layout_height="@dimen/nav_panel_height"
                android:background="@drawable/backup" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/manual_backup"
                android:textColor="@color/black"
                android:textSize="@dimen/nav_panel_text_size" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/colorDarkGery" />

    <LinearLayout
        android:id="@+id/llSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/slider_pennding">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting"
            android:backgroundTint="@color/purple_700" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/nav_panel_width_down"
            android:layout_height="@dimen/nav_panel_height_down"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/margin_7"
            android:background="@drawable/ic_down"
            android:backgroundTint="@color/black"
            android:gravity="right|center"
            app:tint="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSettingView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_5"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/llControlling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5">

            <ImageView
                android:layout_width="@dimen/nav_panel_width"
                android:layout_height="@dimen/nav_panel_height"
                android:background="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/controlling"
                android:textColor="@color/black"
                android:textSize="@dimen/nav_panel_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMaps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5">

            <ImageView
                android:layout_width="@dimen/nav_panel_width"
                android:layout_height="@dimen/nav_panel_height"
                android:background="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/maps"
                android:textColor="@color/black"
                android:textSize="@dimen/nav_panel_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTrackRecording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5">

            <ImageView
                android:layout_width="@dimen/nav_panel_width"
                android:layout_height="@dimen/nav_panel_height"
                android:background="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/track_recording"
                android:textColor="@color/black"
                android:textSize="@dimen/nav_panel_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llGuidance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5">

            <ImageView
                android:layout_width="@dimen/nav_panel_width"
                android:layout_height="@dimen/nav_panel_height"
                android:background="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_10"
                android:gravity="center"
                android:text="@string/guidance"
                android:textColor="@color/black"
                android:textSize="@dimen/nav_panel_text_size" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/colorDarkGery" />

    <LinearLayout
        android:id="@+id/llLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5"
        android:orientation="horizontal"
        android:padding="@dimen/slider_pennding">

        <ImageView
            android:layout_width="@dimen/nav_panel_width_logo"
            android:layout_height="@dimen/nav_panel_height_logo"
            android:background="@drawable/ic_logout"
            android:backgroundTint="@color/purple_700" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/logout"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>