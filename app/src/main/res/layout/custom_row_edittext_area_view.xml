        android:id="@+id/edtDescriptiontextarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="@drawable/bg_edittext"
        />

</LinearLayout>