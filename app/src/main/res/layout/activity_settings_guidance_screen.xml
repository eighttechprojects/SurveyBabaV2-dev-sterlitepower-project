<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/notifications_of_points"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/set_notifications_of_approaching_points"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/nav_panel_text_size" />

        </LinearLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightgrey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:paddingEnd="@dimen/margin_10"
        android:text="@string/style_on_maps"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_14ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/line_color"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgColor1"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/bg_circle_orange" />

                <ImageView
                    android:id="@+id/imgColor2"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/bg_circle_purple" />

                <ImageView
                    android:id="@+id/imgColor3"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/bg_circle_pink" />

                <ImageView
                    android:id="@+id/imgColor4"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/bg_circle_blue" />

                <ImageView
                    android:id="@+id/imgColor5"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/bg_circle_red" />

                <ImageView
                    android:id="@+id/imgColor6"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/bg_circle_light_blue" />

                <ImageView
                    android:id="@+id/imgColor7"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/bg_circle_green" />

                <ImageView
                    android:id="@+id/imgColor8"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/bg_circle_black" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/lightgrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/line_size"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size" />

            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/seekBarLineSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isb_indicator_color="@color/colorAccent"
                app:isb_indicator_text_color="@color/white"
                app:isb_indicator_text_size="18sp"
                app:isb_max="50"
                app:isb_min="5"
                app:isb_only_thumb_draggable="false"
                app:isb_progress="5"
                app:isb_seek_smoothly="true"
                app:isb_show_indicator="rounded_rectangle"
                app:isb_show_tick_marks_type="square"
                app:isb_show_tick_texts="true"
                app:isb_thumb_color="@color/green"
                app:isb_thumb_size="20dp"
                app:isb_tick_marks_drawable="@null"
                app:isb_tick_marks_size="13dp"
                app:isb_tick_texts_color="@color/black"
                app:isb_tick_texts_size="15sp"
                app:isb_track_background_color="@color/lightgrey"
                app:isb_track_background_size="2dp"
                app:isb_track_progress_color="@color/colorAccent"
                app:isb_track_progress_size="4dp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightgrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/text_size"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size" />

            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/seekBarTextSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isb_indicator_color="@color/colorAccent"
                app:isb_indicator_text_color="@color/white"
                app:isb_indicator_text_size="18sp"
                app:isb_max="20"
                app:isb_min="10"
                app:isb_only_thumb_draggable="false"
                app:isb_progress="10"
                app:isb_seek_smoothly="true"
                app:isb_show_indicator="rounded_rectangle"
                app:isb_show_tick_marks_type="square"
                app:isb_show_tick_texts="true"
                app:isb_thumb_color="@color/green"
                app:isb_thumb_size="20dp"
                app:isb_tick_marks_drawable="@null"
                app:isb_tick_marks_size="13dp"
                app:isb_tick_texts_color="@color/black"
                app:isb_tick_texts_size="15sp"
                app:isb_track_background_color="@color/lightgrey"
                app:isb_track_background_size="2dp"
                app:isb_track_progress_color="@color/colorAccent"
                app:isb_track_progress_size="4dp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightgrey" />

</LinearLayout>