<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:id="@+id/llMainLayoutDialog"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitleParent"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_10"
                    android:gravity="center|left"
                    android:paddingTop="@dimen/margin_5"
                    android:paddingBottom="@dimen/margin_5"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margin_17"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/llInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:orientation="vertical" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOK"
                android:layout_width="@dimen/btn_info_width"
                android:layout_height="@dimen/btn_info_height"
                android:textColor="@color/white"
                android:text="@string/lbl_Ok"
                android:background="@drawable/bg_button"
                android:layout_marginLeft="@dimen/margin_10"
                android:textSize="@dimen/margin_13"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnCANCEL"
                android:layout_width="@dimen/btn_info_width"
                android:layout_height="@dimen/btn_info_height"
                android:textColor="@color/white"
                android:text="@string/lblCancel"
                android:background="@drawable/bg_button"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_20"
                android:textSize="@dimen/margin_13"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

