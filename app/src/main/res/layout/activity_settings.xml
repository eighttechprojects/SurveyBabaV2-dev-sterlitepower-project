<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:text="@string/controlling"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/display"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_50"
        android:background="@color/lightgrey" />

    <LinearLayout
        android:id="@+id/llMapScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/map_screen"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_50"
        android:background="@color/lightgrey" />

    <LinearLayout
        android:id="@+id/llPanelsButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/panels_buttons"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/lightgrey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_15"
        android:text="@string/maps"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/online_maps"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_50"
        android:background="@color/lightgrey"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/offline_maps"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_50"
        android:background="@color/lightgrey"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/auxiliary_graphics"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_50"
        android:background="@color/lightgrey"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/advanced_features"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/lightgrey"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtTrackRecording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/track_recording"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/lightgrey" />

    <TextView
        android:id="@+id/txtGuidance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:text="@string/guidance"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/lightgrey" />

    <TextView
        android:id="@+id/txtUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:text="@string/units"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/lightgrey" />

</LinearLayout>