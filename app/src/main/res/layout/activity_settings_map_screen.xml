<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llMapStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="@string/map_control_style"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:id="@+id/txtMapStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Normal"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/nav_panel_text_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightgrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="@string/hold_map_center"
                android:textColor="@color/black"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Re-align your position with map cursor after 5 sec"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/nav_panel_text_size" />
        </LinearLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchReAlignMapCursor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightgrey" />

    <LinearLayout
        android:id="@+id/llMapCursor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/map_cursor"
                android:textColor="@color/black"
                android:textSize="@dimen/nav_panel_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgTargetLoc1"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/my_loc_2"
                    app:tint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/imgTargetLoc2"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/ictarget01"
                    app:tint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/imgTargetLoc3"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/ictarget02"
                    app:tint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/imgTargetLoc4"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/ictarget03"
                    app:tint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/imgTargetLoc5"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/ictarget04"
                    app:tint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/imgTargetLoc6"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/ictarget05"
                    app:tint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/imgTargetLoc7"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/ictarget06"
                    app:tint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/imgTargetLoc8"
                    android:layout_width="@dimen/nav_panel_width"
                    android:layout_height="@dimen/nav_panel_height"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="?selectableItemBackground"
                    android:src="@drawable/ictarget07"
                    app:tint="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightgrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/two_finger_measuring"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightgrey"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/nav_panel_width"
            android:layout_height="@dimen/nav_panel_height"
            android:background="@drawable/setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/hardware_control"
            android:textColor="@color/black"
            android:textSize="@dimen/nav_panel_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/btnDecrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="-"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="100 % "
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnIncrease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="+"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16ssp" />
    </LinearLayout>

</LinearLayout>